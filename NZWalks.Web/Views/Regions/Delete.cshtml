@model NZWalks.Web.Models.DTO.RegionDto

<h1 class="mt-3">Delete Region</h1>

@if (Model != null)
{
    <form method="post" class="mt-3">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" readonly />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="Index">Go Back</a>
    </div>
}