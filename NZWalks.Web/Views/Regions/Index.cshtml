@model IEnumerable<NZWalks.Web.Models.DTO.RegionDto>


<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td class="d-flex justify-content-center align-items-center gap-3">
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Regions" asp-action="Delete" asp-route-id="@region.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>